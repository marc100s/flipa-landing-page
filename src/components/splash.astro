---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import astronautImage from "~/assets/astronaut.png";
import trigoImage from "~/assets/trigo.webm";
import GradientText from "./GradientText.astro";


const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-transparent">
  <div class="video-background absolute inset-0 z-0">
    <video autoplay loop muted class="object-cover w-full h-full">
      <source src={trigoImage} type="video/mp4">
    </video>
  </div>

  <body class="color-text-light">
  <div class="relative grid h-full place-items-center sm:grid-cols-2 z-10">
    <h2 class="font-primary flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end">
      <Icon name="logomark" class="size-20 text-white md:size-32" />
      <div class="text-center font-extrabold tracking-tighter text-6xl md:text-6xl">
        <GradientText text="Flipa Bread està per flipar, Un pa extraordinari, Fet al moment, Gust extraordinari, Aroma únic" />
      </div>
    </h2>
    <div
      id="astronaut"
      class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start z-20"  
    >
      <Image
        class="h-full w-full object-cover"
        src={astronautImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="Un astronauta en un campo de trigo"
      />
    </div>
  </div>
</section>
</body>
<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #astronaut {
    animation: float linear 2.5s infinite alternate;
  }

  .video-background video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  @media (prefers-reduced-motion: reduce) {
    #astronaut {
      @apply animate-none;
    }

    :global(#video-background) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>